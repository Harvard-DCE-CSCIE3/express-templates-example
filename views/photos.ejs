<!-- we're not using this file, but it's here as an example of what a 
 photo gallery might look like. We could use this on a 
 'GET /photos' path, for example, to show all photos. -->

<%- include('header', { title: 'Add Photo' }) %>
  <div class="page-content"> 
    <h2>Photo Gallery</h2>
    <div class="gallery">
        <% if (photos && photos.length > 0) { %>
        <% photos.forEach(function(photo) { %>
            <div class="photo-item">
            <h3><%= photo.title %></h3>
            <img src="<%= photo.imageUrl %>" alt="<%= photo.title %>">
            <% if (photo.description) { %>
                <p><%= photo.description %></p>
            <% } %> 
            </div>
        <% }); %>
        <% } else { %>
        <p>No photos yet. <a href="/photos">Add the first one!</a></p>
        <% } %>
    </div>

    <p><a href="/">Back to Home Page</a></p>
  </div>
</body>
</html>
